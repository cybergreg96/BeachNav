<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/BN.map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".MapActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <EditText
            android:id="@+id/editText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="16.11"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/menu_search_hint"
            android:inputType="text"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/background"
            android:translationY="1.5dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:backgroundTint="@color/colorPrimary"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:onClick="onSearch" />
        <!--11/5/2017, 1:03am, Austin Tao - this only works for "Vivian Engineering Center" for now -->

        <Button
            android:id="@+id/location"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_weight="0.4"
            android:backgroundTint="@color/colorPrimary"
            android:drawableStart="@android:drawable/ic_menu_mylocation" />
        <!--android:onClick="findLocation" -->
    </LinearLayout>

</RelativeLayout>